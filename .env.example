# === LLM Providers ===
# At least one LLM provider must be configured.
# For OpenAI-compatible APIs (TogetherAI, Anyscale, Fireworks), set
# OPENAI_BASE_URL to the provider's endpoint and OPENAI_TEXT_MODEL to
# a supported model name.
OPENAI_API_KEY=your-openai-or-togetherai-key-here
OPENAI_BASE_URL=
# Override model names for non-OpenAI providers:
#   TogetherAI:  meta-llama/Meta-Llama-3.1-70B-Instruct-Turbo
#   Fireworks:   accounts/fireworks/models/llama-v3p1-70b-instruct
OPENAI_TEXT_MODEL=
# Vision model — leave blank to disable vision OCR via this provider
OPENAI_VISION_MODEL=
# Embedding model — leave blank for text-embedding-3-small (OpenAI)
#   TogetherAI:  BAAI/bge-base-en-v1.5 (768 dims, free tier)
OPENAI_EMBEDDING_MODEL=

ANTHROPIC_API_KEY=your-anthropic-key-here
# Leave blank to skip Ollama
OLLAMA_BASE_URL=http://localhost:11434

# === Music Databases ===
DISCOGS_CONSUMER_KEY=your-discogs-consumer-key
DISCOGS_CONSUMER_SECRET=your-discogs-consumer-secret
# MusicBrainz requires no key — uses User-Agent identification
MUSICBRAINZ_APP_NAME=raiveFlier
MUSICBRAINZ_APP_VERSION=0.1.0
MUSICBRAINZ_CONTACT=your-email@example.com

# === Web Search ===
# DuckDuckGo requires no key
# Serper (optional, 2500 free/month)
SERPER_API_KEY=

# === RAG Configuration ===
RAG_ENABLED=false
CHROMADB_PERSIST_DIR=./data/chromadb
CHROMADB_COLLECTION=raiveflier_corpus
RAG_TOP_K=20
RAG_MAX_TOKENS=30000

# === Session & Feedback Persistence ===
FEEDBACK_DB_PATH=data/feedback.db
SESSION_DB_PATH=data/session_state.db

# === App Config ===
APP_HOST=0.0.0.0
APP_PORT=8000
APP_ENV=development
LOG_LEVEL=INFO
